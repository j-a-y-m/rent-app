<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="listingDetailTitle" parent="style_margin">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="listingDetailText" parent="style_margin">

        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="ratingBarBig" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:progressTint">@android:color/holo_orange_light</item>
        <item name="android:secondaryProgressTint">@android:color/holo_orange_light</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>

    </style>
    <style name="ratingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:progressTint">@android:color/holo_orange_light</item>
        <item name="android:secondaryProgressTint">@android:color/holo_orange_light</item>
    </style>


    <style name="searchBarText" parent="" >
        <item name="android:textSize">21sp</item>
    </style>

    <style name="buttonBlue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/materialButtonGray</item>
        <item name="android:textColor">@color/materialBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="buttonRed" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/materialButtonGray</item>
        <item name="android:textColor">@color/materialRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="buttonGrey" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/materialButtonGray</item>
        <item name="android:textColor">@color/materialGrayDarkText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="searchDropDown" parent="Widget.AppCompat.ListView.DropDown">
       <item name="elevation">0dp</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_filter</item>
    </style>



</resources>